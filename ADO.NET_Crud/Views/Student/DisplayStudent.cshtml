@model IEnumerable<ADO.NET_Crud.Models.Student_Info>

@{
    ViewData["Title"] = "DisplayStudent";
}

<h1>DisplayStudent</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Std_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Std_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Std_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Std_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Std_Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Std_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Std_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Std_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Std_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                <img src="~/StudentImages/@item.Std_Image" width="50" height="50" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Std_Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Std_Id  })
            </td>
        </tr>
}
    </tbody>
</table>
